  title ShareMusic
  style.
    #wrapper {
    position: fixed;
    top: 60%;
    left: 50%;
    transform: translate(-50%, -50%);
    cursor: pointer;
    }
    #link_wrapper {
    position: relative;
    }
    #button {
    display: block;
    width: 250px;
    height: 50px;
    line-height: 50px;
    font-weight: bold;
    text-decoration: none;
    background: #333;
    text-align: center;
    color: #fff;
    text-transform: uppercase;
    letter-spacing: 1px;
    border: 3px solid #333;
    transition: all 0.35s;
    }
    .icon {
    width: 50px;
    height: 50px;
    border: 3px solid transparent;
    position: absolute;
    transform: rotate(45deg);
    right: 0;
    top: 0;
    z-index: -1;
    transition: all 0.35s;
    }
    .icon svg {
    width: 30px;
    position: absolute;
    top: calc(50% - 15px);
    left: calc(50% - 15px);
    transform: rotate(-45deg);
    fill: #2ecc71;
    transition: all 0.35s;
    }
    #button:hover {
    width: 200px;
    border: 3px solid #2ecc71;
    background: transparent;
    color: #2ecc71;
    }
    #button:hover + .icon {
    border: 3px solid #2ecc71;
    right: -25%;
    }
    .image {
    width: 24%;
    }
    @media screen and (max-width: 800px) {
    .image {
    padding-top: 100px;
    width: 50%; /* The width is 100%, when the viewport is 800px or smaller */
    }
    }
